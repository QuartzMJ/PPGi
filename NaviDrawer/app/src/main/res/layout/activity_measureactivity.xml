<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Runtime_measureactivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/javaCameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_heartrate"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:text="Heartrate: 79bpm"
        android:textAlignment="center"
        android:textColor="#E24343"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/switchCameraButton2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="2dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="45dp"
         />

    <ImageButton
        android:id="@+id/boundingBoxSwitcher"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="2dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_boundingbox_off_foreground"/>

    <ImageButton
        android:id="@+id/plotRuntimeHeartRate"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="2dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_plot_foreground"/>

</androidx.constraintlayout.widget.ConstraintLayout>